<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/savedScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="@color/app_top_bar_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnLeftMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/menus" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnRightMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleBookmarked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/urbanistmedium"
            android:text="Bookmarked Articles"
            android:textColor="@color/app_secondary_teal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridBookmarked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box">

                <ImageView
                    android:id="@+id/bookmark1"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/bookmark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box">

                <ImageView
                    android:id="@+id/bookmark2"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/bookmark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box">

                <ImageView
                    android:id="@+id/bookmark3"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/bookmark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box">

                <ImageView
                    android:id="@+id/bookmark4"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/bookmark" />
            </FrameLayout>
        </GridLayout>

        <TextView
            android:id="@+id/titleFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/urbanistmedium"
            android:text="Following"
            android:textColor="@color/app_secondary_teal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridFollowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_box" />
        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
